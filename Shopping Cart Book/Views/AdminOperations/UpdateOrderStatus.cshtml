@model UpdateOrderStatusModel
@{
    Layout = "_AdminLayout";
    ViewData["Title"] = "UpdatePaymentStatus";
}

<div class="container mt-4">
    <h2 class="text-center mb-4">Update Order Status</h2>

    <div class="card p-4" style="max-width: 600px; margin: auto; border-radius: 10px; box-shadow: 0 4px 8px rgba(0,0,0,0.1);">
        <!-- Cross Icon as Back Button -->
        <a href="/AdminOperations/AllOrders" class="text-red" style="position:absolute; color:red; top: 10px; right: 10px; font-size: 24px;">
            <i class="bi bi-x-circle"></i>
        </a>

        <form asp-action="UpdateOrderStatus" class="pt-3">
            <input type="hidden" asp-for="OrderId" />

            <div class="mb-3">
                <label for="OrderStatusId" class="form-label">Order Status</label>
                <select class="form-select" asp-for="OrderStatusId" asp-items="@Model.OrderStatusList">
                    <option value="">Select order status</option>
                </select>
                <span class="text-danger" asp-validation-for="OrderStatusId"></span>
            </div>

            <button type="submit" class="btn btn-primary w-100">Update Status</button>

            @if (TempData["msg"] != null)
            {
                <div id="successMsg" class="alert alert-success mt-3">
                    @TempData["msg"]
                </div>
            }
        </form>
    </div>
</div>

